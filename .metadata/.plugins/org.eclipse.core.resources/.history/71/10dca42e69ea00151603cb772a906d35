#ifndef WORK_H_
#define WORK_H_

enum status_e
{
	READ = 0,
	CLOSE,
	CONNECTED,
	ERROR
};

class work {
public:
	work():this_conn(-1),status(ERROR){};
	work::work(conn * pconn, status_e s);
	virtual ~work();

private:
	conn* this_conn;
	status_e status;
};


#endif /* WORK_H_ */
