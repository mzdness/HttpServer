#include <stdio.h>
#include <string.h>
#include <iostream>
#include <sys/socket.h>
#include <unistd.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <netdb.h>
#include <pthread.h>
#include "BlockingQueue.h"
#include <event2/event.h>
#include <event2/event_compat.h>
#include <event2/event_struct.h>
#include <event2/thread.h>
#include <cstdlib>
#include <fcntl.h>
using namespace std;

// 事件base
struct event_base* base;
BoundedBlockingQueue<int> work_queue(10);

int work_q[10];
int p_q = 0;


void set_nonblocking(int fd)
{
	int flags = fcntl(fd, F_GETFL, 0);
	fcntl(fd, F_SETFL, flags|O_NONBLOCK);
}


// 读事件回调函数
void *onRead_t(void *arg)
{
	cout << "worker init!" << endl;


    int iLen;
    char buf[1500];
	while(1)
	{
		//int  iCliFd = work_q[--p_q];
		int iCliFd = work_queue.pop();
		iLen = recv(iCliFd, buf, 1500, 0);

		if (iLen <= 0) {
			cout << "Client Close iLen = " << iLen << endl;

			// 连接结束(=0)或连接错误(<0)，将事件删除并释放内存空间
			//struct event *pEvRead = (struct event*)arg;
			//event_del(pEvRead);
			//delete pEvRead;

			close(iCliFd);
			//return 0;
		}

		buf[iLen] = 0;
		cout << "Client Info:" << buf << endl;
	}
	return 0;
}

void onRead(int iCliFd, short iEvent, void *arg)
{
	//work_q[p_q++] = iCliFd;
	work_queue.push(iCliFd);
	cout << "push!"<<endl;
	//onRead_t(arg);

}

// 连接请求事件回调函数
void onAccept(int iSvrFd, short iEvent, void *arg)
{
    int iCliFd;
    struct sockaddr_in sCliAddr ;

    socklen_t iSinSize = sizeof(sCliAddr);
    iCliFd = accept(iSvrFd, (struct sockaddr*)&sCliAddr, &iSinSize);
    cout << "accept!" << iCliFd << endl;
	evutil_make_socket_nonblocking(iCliFd);
    // 连接注册为新事件 (EV_PERSIST为事件触发后不默认删除)
    struct event *pEvRead = new event;
    event_set(pEvRead, iCliFd, EV_READ|EV_PERSIST, onRead, pEvRead);
    event_base_set(base, pEvRead);
    event_add(pEvRead, NULL);
}

int main()
{

    int iSvrFd;
	int n=1;
    struct sockaddr_in sSvrAddr;
    //evthread_use_pthreads();
    memset(&sSvrAddr, 0, sizeof(sSvrAddr));
    sSvrAddr.sin_family = AF_INET;
    sSvrAddr.sin_addr.s_addr = inet_addr("127.0.0.1");
    sSvrAddr.sin_port = htons(8888);




    pthread_t pth_id;
    int ret = pthread_create(&pth_id,NULL,onRead_t,NULL);
    // 创建tcpSocket（iSvrFd），监听本机8888端口
    iSvrFd = socket(AF_INET, SOCK_STREAM, 0);

	evutil_make_listen_socket_reuseable(iSvrFd);

    bind(iSvrFd, (struct sockaddr*)&sSvrAddr, sizeof(sSvrAddr));
    listen(iSvrFd, 10);

    // 初始化base
    base = event_base_new();

    struct event evListen;
    // 设置事件
    event_set(&evListen, iSvrFd, EV_READ|EV_PERSIST, onAccept, NULL);
    // 设置为base事件
    event_base_set(base, &evListen);
    // 添加事件
    event_add(&evListen, NULL);

    // 事件循环
    event_base_dispatch(base);

    return 0;
}
